<p style="color: green"><%= notice %></p>
<% if @rental && @rental.errors.any? %>
<div id="error_explanation">
<h2><%= pluralize(@rental.errors.count, "erreur") %> vous empêchent de continuer:</h2>

<ul>
  <% @rental.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>
</div>
<% end %>

<%= render @bicycle, bicycle: @bicycle, show_details: true %>

<div id="gmp-map" data-latitude="<%= @bicycle.latitude %>" data-longitude="<%= @bicycle.longitude %>" style="height: 300px;"></div>

<%= render 'bicycles/calendar', bicycle: @bicycle %>
<div class="mt-6 mb-6 d-flex flex-column align-items-center">
  <% if user_signed_in? %>
    <%= render 'rentals/form', bicycle: @bicycle %>
      <% if current_user.id == @bicycle.owner.id %>
        <%= link_to "Modifier mon annonce", edit_bicycle_path(@bicycle), class: "btn btn-primary" %>
        <%= button_to "Supprimer mon annonce", @bicycle, method: :delete, class: "btn btn-danger" %>
      <% else %>
      <% end %>  
    <%= link_to "Retour", bicycles_path %>  
  <% else %>
    <%= link_to "Connectez-vous pour louer ce vélo", new_user_session_path, class: "btn btn-outline-primary btn-sm" %>
  <% end %>
</div>

<div class="container mt-4">
  <h2 class="mb-3">Avis sur ce vélo</h2>
  <% if @bicycle.rentals.any? %>
    <% @bicycle.rentals.each_slice(3) do |rentals_slice| %>
      <div class="row">
        <% rentals_slice.each do |rental| %>
          <% if rental.renter_review %>
            <div class="col-md-4 mb-4">
              <div class="card">
                <div class="card-body">
                  <h6 class="card-title"><%= rental.renter.first_name %> <%= rental.renter.last_name %></h6>
                  <h5 class="card-title">Note : <%= rental.renter_review.rating %>/5</h5>
                  <p class="card-text"><%= rental.renter_review.review_text %></p>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <p>Il n'y a pas encore d'avis pour cette annonce</p>
  <% end %>        
</div>