<%= render 'shared/banner' %>
<br></br>
  <div class="container d-flex flex-row justify-content-center align-items-stretch">
    <div>
    <div class="form-group mx-2">
  <%= text_field_tag :city, nil, id: "city-input", class: "form-control", placeholder: "Ville" %>
</div>

<%= form_with url: bicycles_filtered_path, method: :get, class: "d-md-flex justify-content-center mt-4", id: "search-form" do |form| %>
  <div class="form-group mx-2">
    <%= form.datetime_field :start_date, class: "form-control", placeholder: "Début" %>
  </div>
  <div class="form-group mx-2">
    <%= form.number_field :duration, class: "form-control", placeholder: "Durée (en heures)" %>
  </div>
  <div class="form-group mx-2">
    <%= form.submit "Rechercher", class: "btn btn-primary" %>
  </div>
<% end %>

      <div id="bicycles" class="row d-flex justify-content-center">
        <div class="mapIndex">
          <div id="index-map"></div>
        </div>
        <div id="carouselExampleControls" class="carousel slide col-md-6 mx-auto" data-bs-ride="carousel">
        <turbo-frame id="bicycles-list">
          <%= render partial: 'bicycles/list', locals: { bicycles: @bicycles } %>
        </turbo-frame>
        <div class="d-flex align-items-center">
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <img src="<%= asset_path('fgauche.png') %>" alt="Flèche" width="30%" style="color: #FFDE8C;">
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <img src="<%= asset_path('fdroite.png') %>" alt="Flèche" width="30%">
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>
      
      </div>
    </div>
  </div>
  <br></br>
  <br></br>

