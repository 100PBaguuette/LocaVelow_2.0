<%= form_with(model: bicycle, local: true, html: { multipart: true }) do |form| %>
  <% if bicycle.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(bicycle.errors.count, "error") %> prohibited this bicycle from being saved:</h2>

      <ul>
        <% bicycle.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :model, style: "display: block" %>
    <%= form.text_field :model %>
  </div>

  <div>
    <%= form.label :bicycle_type, style: "display: block" %>
    <%= form.text_field :bicycle_type %>
  </div>

  <div>
    <%= form.label :size, style: "display: block" %>
    <%= form.text_field :size %>
  </div>

  <div>
    <%= form.label :condition, style: "display: block" %>
    <%= form.text_field :condition %>
  </div>

  <div>
    <%= form.label :price_per_hour, style: "display: block" %>
    <%= form.number_field :price_per_hour %>
  </div>

  <div>
    <%= form.label :latitude, style: "display: block" %>
    <%= form.number_field :latitude %>
  </div>

  <div>
    <%= form.label :longitude, style: "display: block" %>
    <%= form.number_field :longitude %>
  </div>

  <div>
    <%= form.label :address, style: "display: block" %>
    <%= form.text_field :address %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :image, style: "display: block" %>
    <%= form.file_field :image %>
  </div>

  <%= render 'address_fields', form: form %>
  
  <div>
  <%= form.submit "Checkout", class: "button-cta" %>
  </div>
  <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=#{ENV['GOOGLE_MAPS_API_KEY']}&libraries=places,marker&callback=initMap&solution_channel=GMP_QB_addressselection_v2_cABC", defer: true %>
