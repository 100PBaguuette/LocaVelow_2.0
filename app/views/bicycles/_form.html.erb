<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <%= form_with(model: bicycle) do |form| %>
        <% if bicycle.errors.any? %>
          <div style="color: red">
            <h2><%= pluralize(bicycle.errors.count, "error") %> prohibited this bicycle from being saved:</h2>

            <ul>
              <% bicycle.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.label :model, "Titre", style: "display: block" %>
          <%= form.text_field :model, class:"form-control" %>
        </div>

        <div>
          <%= form.label :bicycle_type, "Catégorie", style: "display: block" %>
          <%= form.select :bicycle_type, Bicycle.bicycle_types.keys.map { |type| [type.humanize, type] }, {}, class: "form-select" %>
        </div>

        <div>
          <%= form.label :size, "Taille", style: "display: block" %>
          <%= form.select :size, Bicycle.sizes.keys.map { |size| [size.humanize, size] }, {}, class: "form-select" %>
        </div>

        <div>
          <%= form.label :condition, "Etat", style: "display: block" %>
          <%= form.text_field :condition, class: "form-control" %>
        </div>

        <div>
          <%= form.label :price_per_hour, "Prix/heure", style: "display: block" %>
          <%= form.number_field :price_per_hour, class: "form-control" %>
        </div>

        <div>
          <%= form.label :address, "Adresse", style: "display: block" %>
          <%= form.text_field :address, class: "form-control" %>
        </div>

        <div class="actions mt-5 d-flex justify-content-center">
          <%= form.submit "Enregistrer le vélo", class: "btn btn-lg btn-primary btn-block"  %>
        </div>
      <% end %>
    </div>
  </div>
</div>      
    